<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/menu_text_size</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/menu_text_size</item>
    </style>

    <style name="ContentLoadingProgress">
        <item name="colorAccent">@color/blue_gem</item>
    </style>

    <style name="MovieCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">6dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPaddingBottom">@dimen/standard_margin</item>
        <item name="contentPaddingTop">@dimen/standard_margin</item>
        <item name="contentPaddingLeft">@dimen/standard_margin</item>
        <item name="contentPaddingRight">@dimen/standard_margin</item>
        <item name="cardBackgroundColor">@color/selago</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="colorControlActivated">@color/slate_blue</item>
        <item name="android:textColorHint">@color/east_side</item>
    </style>
</resources>